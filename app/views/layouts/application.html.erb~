	<section id="sign_up_greeting">
		<center><h1>Hello! This is my sample notepad.<br/>Just sign up, if you wany simple and reliable tool.<br/><%= link_to "Sign up", signup_path %> or <%= link_to "Sign in", signin_path %>!</h1></center></section>
<% else %>
	<header>
		<% if current_user %>
			Logged in as <%= current_user.name %> | <%= link_to "Sign out", signout_path %>
		<% else %>
			<%= link_to "Sign in", signin_path %> or <%= link_to "Sign up", signup_path %>
		<% end %>

		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, id: "flash_#{name}" %>
		<% end %>
	</header>

	<section id="main">
		<%= yield %>
	</section>

	<%= debug(params) if Rails.env.development? %>
<% end %>
