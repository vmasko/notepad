<!DOCTYPE html>
<html>
<head>
  <title>Notepad</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<% if current_user %>
			Logged in as <%= current_user.name %> | <%= link_to "Sign out", signout_path %>
		<% else %>
			<%= link_to "Sign in", signin_path %> or <%= link_to "Sign up", signup_path %>
		<% end %>

		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, id: "flash_#{name}" %>
		<% end %>
	</header>

	<section id="main">
		<%= yield %>
	</section>

	<%= debug(params) if Rails.env.development? %>
</body>
</html>
